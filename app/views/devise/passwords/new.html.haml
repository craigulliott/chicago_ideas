%section.container.form_container#main_content


  -# Left column with form
  .box.double.left

    .column_row#login_container
      %span.column_header Forgot your password
      = semantic_form_for resource, :as => resource_name, :url => password_path(resource_name) do |f|
        = f.inputs do
          = f.input :email

        = f.buttons do
          = f.commit_button :label => "Reset Password"

      = render "devise/shared/links"
