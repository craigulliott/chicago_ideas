= render 'member_controls'

- content_for :top_links do
  = edit_model_link @talk, true
  = destroy_model_link @talk, true

%h1
  = @talk.name
  = icon_link_to 'notes', notes_admin_talk_path(@talk), 'script'
  = new_model_link Note, @talk
  
#model_detail
  %h4 Name
  %p= @talk.name

  %h4 Description
  %p= @talk.description

  %h4 Track
  %p= @talk.track.present? ? @talk.track.name : 'none'
  %h4 Day
  %p= @talk.day.name

  %h4 Venue
  %p= @talk.venue.name

  %h4 Start Time
  %p= @talk.start_time.to_s(:time)

  %h4 End Time
  %p= @talk.end_time.to_s(:time)
  
  %h4 Ticket URL
  %p= @talk.ticket_url

  %h4 Sponsor
  %p= @talk.sponsor.present? ? @talk.sponsor.name : 'none'



