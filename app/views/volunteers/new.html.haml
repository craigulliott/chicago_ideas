%section.banner.container-fluid
  .banner_wrapper{:style => "background: url(#{asset_path "application/volunteer.jpg"}) top center no-repeat;"}


-# Main Talk content
%section.container#main_content

  #page_header
    #page_title.left
      %h1 Volunteer for CIW
    = render "partials/share"
    
    
  -# Left column, Main content
  .box.double.left
    .column_row#volunteer_form
      .column.column_double
      
        %p Be part of Chicago Ideas Week, and experience all it has to offer in a unique way.
        
        .form_section.noborder
          = semantic_form_for(@volunteer) do |f|
            = f.inputs :name => "", :class => "v_list" do
              = f.input :first_name, :label => "First Name"
              = f.input :last_name, :label => "Last Name"
              = f.input :email, :label => "Email Address"
              = f.input :phone, :label => "Phone Number"            
              = f.input :postcode 
            
            = f.inputs :name => "Student, Work, and Community Organiations that you belong to:", :class => "v_list" do
              %table
                %tr
                  %td= f.input :organization_name_1, :label => "Organization"
                  %td= f.input :organization_department_1, :label => "Department"
                  %td= f.input :organization_title_1, :label => "Title"
                %tr
                  %td= f.input :organization_name_2, :label => "Organization"
                  %td= f.input :organization_department_2, :label => "Department"
                  %td= f.input :organization_title_2, :label => "Title"
                %tr
                  %td= f.input :organization_name_3, :label => "Organization"
                  %td= f.input :organization_department_3, :label => "Department"
                  %td= f.input :organization_title_3, :label => "Title"
            
            = f.inputs :name => "", :class => "v_list" do
              = f.input :interests_volunteering, :as => :check_boxes, :collection => ['Leading up to CIW (on projects that can be completed remotely)', 'Leading up to CIW (on projects that are completed in the CIW offices)', 'Leading up to CIW (as an Intern)', 'During Chicago Ideas Week (as an Event Volunteer)'], :label => "I am interested in volunteering (check all that apply):"
            
            = f.inputs :name => "", :class => "v_list" do
              = f.input :skills, :as => :check_boxes, :collection => ['Copywriting', 'Customer Service', 'Editing', 'Event Planning/Production', 'Excel', 'Fundraising', 'Graphic Design', 'IT', 'Photoshop', 'PowerPoint', 'PR', 'Social Media/Management', 'Software Development', 'Web Design'], :label => "Special Skills (check all that apply):"
           
            = f.inputs :class => "v_lists" do 
              = f.input :why, :label => "Why are you interested in volunteering?" 
              = f.input :anything_else, :label => "Is there anything else you would like us to know about?"
              
              = f.buttons do
                = f.submit :value => "Submit Application", :class => "btn submit", :id => "submit_application"
                  

  -# Include Sidebar Items
  #sidebar
    = render "partials/sponsors"
    = render "partials/social"
    = render "partials/newsletter_form"
    

:javascript
  $('#submit_application').bind('click', function(e) {
    $(this).val('processing...');
  });
