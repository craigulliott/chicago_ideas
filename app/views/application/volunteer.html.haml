-#     Chicago Ideas Week
-#     application/about.html.haml
-#     01/016/2012


%section.banner.container-fluid
  .banner_wrapper{:style => "background: url(#{asset_path "application/volunteer.jpg"}) top center no-repeat;"}


-# Main Talk content
%section.container#main_content

  #page_header
    #page_title.left
      %h1 Volunteer for CIW
    = render "partials/share"
    
  -# Left column, main content: About Us information
  .box.double.left

    .column_row.divided_row#about_description
      .column.column_double
        %p Be part of Chicago Ideas Week, and experience all it has to offer in a unique way.
        
        %form#volunteer_form

          %table.form_table

            %tr
              %td{:width => "120"}
                %label Full Name
              %td
                %input{:type => "text", :name => "fname"}
                %input{:type => "text", :name => "lname"}

            %tr
              %td{:width => "120"}
                %label Email address
              %td
                %input{:type => "email", :name => "email", :class => "medium"}

            %tr
              %td{:width => "120"}
                %label Phone
              %td
                %input{:type => "phone", :name => "phone", :class => "medium"}

            %tr.divided
              %td{:width => "120"}
                %label Zip Code
              %td
                %input{:type => "text", :name => "zipcode", :class => "small"}

            %tr
              %td{:width => "120"}
              %td
                %label Are you currently employed?
                %radio_button Yes
                %radio_button No

            %tr
              %td{:width => "120"}
              %td
                %label Why are you interested in volunteering?
                %textarea{:name => "why"}

            %tr
              %td{:width => "120"}
              %td
                %label What specific areas of expertise/experience do you have?*
                %textarea

            %tr
              %td{:width => "120"}
              %td
                %label What is your availability leading up to CIW?*
                %textarea

            %tr
              %td{:width => "120"}
              %td
                %label Are you interested in volunteering on the CIW Event Promotion / Street Team?*
                %radio_button Yes
                %radio_button No

            %tr
              %td{:width => "120"}
              %td.no_block
                %label{:class => "block"} Which days during the week of CIW are you available?*
                %label
                  %input{:type => "checkbox"} M
                %label
                  %input{:type => "checkbox"} T
                %label
                  %input{:type => "checkbox"} W
                %label
                  %input{:type => "checkbox"} Th
                %label
                  %input{:type => "checkbox"} F
                %label
                  %input{:type => "checkbox"} S
                %label
                  %input{:type => "checkbox"} Su


            %tr
              %td{:width => "120"}
              %td.no_block
                %label What times during the week of CIW are you available?*
                %label
                  %input{:type => "checkbox", :class => "block"} 8am - 1pm
                %label
                  %input{:type => "checkbox", :class => "block"} 10am - 3pm
                %label
                  %input{:type => "checkbox", :class => "block"} 12am - 5pm
                %label
                  %input{:type => "checkbox", :class => "block"} 2pm - 7pm
                %label  
                  %input{:type => "checkbox", :class => "block"} 4pm - 9pm
                %label
                  %input{:type => "checkbox", :class => "block"} 6pm - 11pm              

            %tr
              %td{:width => "120"}
              %td
                %label How many hours are you looking to volunteer?*
                %select{:name => "hours_to_volunteer"}
                  %option{:value => "1"} 1 - 3
                  %option{:value => "2"} 2 - 5
                  %option{:value => "3"} 5 - 10
                  %option{:value => "4"} 10 - 25
                  %option{:value => "5"} 25 - 40
                  %option{:value => "6"} I don't know'

            %tr
              %td{:width => "120"}
              %td
                %input{:type => "submit", :value => "Submit!", :class => "blue_btn"}
        

      

  -# Include Sidebar Items
  #sidebar
    = render "partials/sponsors"
    = render "partials/social"
    = render "partials/newsletter_form"