.column_row#speakers
  .column.column_double
    %span.column_header Speakers
    %ul.preview_list.speaker_list.double_rows
      - @speakers.each do |speaker|
        %li{:id => "speaker_#{speaker.id}", :class => "speaker_#{speaker.id}"}
          .img_frame
            - begin
              = link_to image_tag(speaker.portrait.url), speaker_path(speaker)
            - rescue
          = link_to speaker.name, speaker_path(speaker)
          %span= speaker.title

    = link_to "view all speakers â†’", speakers_path, :class => "view_all blue"
