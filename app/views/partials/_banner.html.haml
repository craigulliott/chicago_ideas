-#       Chicago Ideas Week
-#       Featured Banner Partial
-#       _banner.html.haml
-#       01/01/2012


%section#featured.container-fluid

  #banner_container
    - @featured.each do |featured_item|
      .banner_item{:id => "banner_#{featured_item.id}", :style => "background: url(#{featured_item.homepage_banner(:large)}) center center no-repeat;"}
        .banner_content
          .banner_box
            .banner_top
              %span.banner_title= link_to featured_item.title, video_path(featured_item)
              - featured_item.performances.limit(2).each do |performance|
                - if performance.speaker.present?
                  %span.b_link= link_to performance.speaker.name, speaker_path(performance.speaker)
            .banner_bottom
              %span{:class => "banner_dates"}= "CIW 2012: October 8 - 14"



    .container-fluid#banner_nav_wrapper
      %ul#banner_nav
        - @featured.each do |featured_thumb|
          %li= link_to image_tag(featured_thumb.homepage_banner(:thumb)), "#", :class => "b_thumb thumb_#{featured_thumb.id}", :id => "thumb_#{featured_thumb.id}"