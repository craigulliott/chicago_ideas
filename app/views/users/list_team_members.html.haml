-#     01/17/2012


-# Breadcrumbs and Explore button
%section#header_toolbar.container-fluid
  .container

    #breadcrumbs
      %ul
        %li= link_to "Home", "/"
        %li= link_to "Team", team_members_path
    -#= link_to "Explore Speakers", "#", :class => "explore_btn", :id => "explore_speakers"


-# Begin Main Speaker content
%section.container#main_content

  #page_header
    #page_title.left
      %h1 CIW Team
    = render "partials/share"


  -# Left column: Team List
  .box.double.left
    
    .talk_gallery
      = image_tag('application/team/team_1.jpg')
      = image_tag('application/team/team_2.jpg')
      = image_tag('application/team/team_3.jpg')
      = image_tag('application/team/team_4.jpg')
      = image_tag('application/team/team_5.jpg')
      = image_tag('application/team/team_6.jpg')
      = image_tag('application/team/team_7.jpg')
      
          
          
    .column_row#team
      .column.column_double
        %span.column_header CIW Team Members
        - if @team.present?
          %ul.preview_list.team_list.double_rows
            = render "partials/team_loop", :team => @team, :current_team_member => 'NULL'



  -# Include Sidebar Items
  #sidebar
    -#= render "partials/track_filter"
    = render "partials/sponsors"
    = render "partials/newsletter_form"
    = render "partials/social"