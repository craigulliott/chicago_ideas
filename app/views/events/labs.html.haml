-#     Chicago Ideas Week
-#     events/labs.html.haml
-#     01/03/2012


-# Breadcrumbs and Explore button
%section#header_toolbar.container-fluid
  .container
    #breadcrumbs
      %ul
        %li= link_to "Home", "/"
        %li= link_to "Events", events_path
        %li
          %span CIW Labs
    = render "partials/explore_dropdown"



-# Main Labs content
%section.container#main_content

  #page_header
    #page_title.left
      %h1 CIW Labs
    = render "partials/share"

  -# Left column, main content
  .box.double.left

    .talk_gallery
      - @labs.each do |lab|
        - if lab.event_photos.present?
          - lab.event_photos.each do |photo|
            = image_tag(photo.photo(:album))




    - if @labs.present?
      .column_row#labs_overview
        .column.column_double
          %ul.lab_list
            - @labs.each do |lab|
              %li{:id => "lab_item_#{lab.id}", :class => "lab_item lab_item_#{lab.id}"}
                %a{:name => "lab_#{lab.id}"}
                %h3= link_to lab.name, "#", :class => "lab_title"
                .lab_description
                  %pre= lab.description
                  %a{:class => "back_top", :href => "javascript:scroll(0,0)"} back top



        
          
  .box.right#labs_list
    .box_header
      %span Labs Quicklinks
    .column_row
      %ul.filter_list.labs_filter
        -#%li= %a.lab_top "Top"
        - @labs.each do |lab|
          %li
            %a{:class => "lab_#{lab.id}", :href => "#lab_#{lab.id}"}= lab.name


  -# Include Sidebar Items
  #sidebar
    = render "partials/sponsors"
    = render "partials/social"
    = render "partials/newsletter_form"