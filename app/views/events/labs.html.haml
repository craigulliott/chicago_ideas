-#     Chicago Ideas Week
-#     events/labs.html.haml
-#     01/03/2012


-# Breadcrumbs and Explore button
%section#header_toolbar.container-fluid
  .container
    #breadcrumbs
      %ul
        %li= link_to "Home", "/"
        %li= link_to "Events", events_path
        %li
          %span CIW Labs
    = render "partials/explore_dropdown"



-# Main Labs content
%section.container#main_content

  #page_header
    #page_title.left
      %h1 CIW Labs
    = render "partials/share"

  -# Left column, main content
  .box.double.left

    .talk_gallery
      - if @event_brand.present?
        - @event_brand.event_photos.count(10).each do |photo|
          = image_tag(photo.photo(:album))


    -# Labs introduction
    .column_row#labs_intro
      .column.column_double
        %p Go Behind-the-Scenes in Chicago with Chicago Ideas Week Labs! 
        %p CIW Labs offer opportunities for participants to experience and explore the best of Chicago like never before.  Exclusive, behind-the-scenes experiences give participants a unique glimpses into the inner workings of businesses and institutions that are otherwise unavailable to the public.  Small groups will explore what it’s like for business leaders in the boardroom, go behind the curtain at leading theaters and venues, and discover “how-it-works” in hands-on workshops.
        
    
    -# Labs List
    - if @labs.present?
      .column_row#labs_overview
        .column.column_double
          %ul.lab_list
            - @labs.each do |lab|
              %li{:id => "lab_item_#{lab.id}", :class => "lab_item lab_item_#{lab.id}"}
                %a{:name => "lab_#{lab.id}"}
                %h3= link_to lab.name, "#", :class => "lab_title"
                .lab_description
                  %pre= lab.description
                  %a{:class => "back_top", :href => "javascript:scroll(0,0)"} back top


  -# Include Sidebar Items
  #sidebar
    = render "partials/sponsors"
    = render "partials/social"
    = render "partials/newsletter_form"