-# Main Labs content
%section.container#main_content

  #page_header
    #page_title.left
      %h1 Affiliate Events
    #page_share.right
      %ul
        %li#twitter_ <a href="https://twitter.com/share" class="twitter-share-button" data-via="chicagoideas" data-count="none" data-hashtags="ciwtalks">Tweet</a>
        -#%li#facebook_ <div class="fb-like" data-href="http://www.google.com" data-send="false" data-layout="button_count" data-show-faces="true"></div>
        %li#facebook_ <div class="fb-like" data-send="false" data-layout="button_count" data-show-faces="false"></div>
        %li#gplus_ <g:plusone size="medium" annotation="none"></g:plusone>


  -# Left column, main content
  .box.double.left

    .talk_gallery
      -#- @talk.talk_photos.each do |photo|
      -#  = image_tag(photo.photo_file_name)
      = image_tag("application/temp/asdf.jpg")
      = image_tag("application/temp/asdffff.jpg")
      = image_tag("application/temp/asdfasdf.jpg")



    - if @events.present?
      #labs_list
        - @events.each do |event|
          .column_row.divided_row{:id => "event_#{event.id}"}
            %a{:name => "event_#{event.id}"}
            .column.column_double
              %h3= event.name
              %pre= event.description
              %a{:class => "back_top", :href => "javascript:scroll(0,0)"} back top
    - else
      .column_row
        .column.column_double
        %p Sorry, there are currently no affiliate events. Please join our mailing list to get updates on events.
        
  
  - if @events.present?
    .box.right#labs_list
      .box_header
        %span Affiliate Event Quicklinks
      .column_row
        %ul.filter_list.labs_filter
          - @events.each do |event|
            %li
              %a{:class => "event_#{lab.id}", :href => "#event_#{lab.id}"}= event.name



  -# Include Sidebar Items
  #sidebar
    = render "partials/sponsors"
    = render "partials/social"
    = render "partials/newsletter_form"