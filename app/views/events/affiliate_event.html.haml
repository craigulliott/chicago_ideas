-#     events/affiliate_event.html.haml
-#     01/03/2012


-# Breadcrumbs and Explore button
%section#header_toolbar.container-fluid
  .container
    #breadcrumbs
      %ul
        %li= link_to "Home", "/"
        %li= link_to "Events", events_path
        %li
          %span Affiliate Events
    = link_to "Explore Talks", "#", :class => "explore_btn", :id => "explore_talks"
    = render "partials/explore_dropdown"


-# Main Labs content
%section.container#main_content

  #page_header
    #page_title.left
      %h1 Affiliate Events
    = render "partials/share"
    
  -# Left column, main content
  .box.double.left

    .talk_gallery
      - @event_photos.each do |photo|
        = image_tag(photo.photo(:album))



    - if @events.present?
      #labs_list
        - @events.each do |event|
          .column_row.divided_row{:id => "event_#{event.id}"}
            %a{:name => "event_#{event.id}"}
            .column.column_double
              %h3= event.name
              %pre= event.description
              %a{:class => "back_top", :href => "javascript:scroll(0,0)"} back top
    - else
      .column_row
        .column.column_double
        %p Sorry, there are currently no affiliate events. Please join our mailing list to get updates on events.
        
  
  - if @events.present?
    .box.right#labs_list
      .box_header
        %span Affiliate Event Quicklinks
      .column_row
        %ul.filter_list.labs_filter
          - @events.each do |event|
            %li
              %a{:class => "event_#{lab.id}", :href => "#event_#{lab.id}"}= event.name



  -# Include Sidebar Items
  #sidebar
    = render "partials/sponsors"
    = render "partials/social"
    = render "partials/newsletter_form"