-#     Chicago Ideas Week
-#     events/index.html.haml
-#     01/018/2012


%section.banner.container-fluid
  .banner_wrapper{:style => "background: url(#{asset_path "application/temp/speaker_landing_banner.jpg"}) top center no-repeat;"}


-# Main Talk content
%section.container#main_content
  
  -# Introduction
  #intro
    %h1 Discover Ideas That Move You
  
  #events_section
    %ul
      %li
        .img_frame
          = link_to image_tag('application/events/events.jpg'), talks_path
        %h3= link_to "CIW Talks & Mega Talks", talks_path
      %li
        .img_frame
          = link_to image_tag('application/events/labs.jpg'), labs_events_path
        %h3= link_to "CIW Labs", labs_events_path
      %li
        .img_frame
          = link_to image_tag('application/events/partner_programs.jpg'), partner_programs_events_path
        %h3= link_to "Partner Programs", partner_programs_events_path
        

  -# Left column, main content
  .box.double.left

    .column_row#about_description
      .column.column_double        
        - if @talks.present?
          .column#homepage_talks
            %span.column_header Talks
            %ul.preview_list
              = render "partials/talks_loop", :talks => @talks
            = link_to "view all talks →", talks_path, :class => "view_all blue"

        - if @chapters.present?
          .column.right#homepage_videos
            %span.column_header Videos
            %ul.preview_list
              = render "partials/chapters_loop", :chapters => @chapters
            = link_to "view all videos →", videos_path, :class => "view_all blue"




  -# Include Sidebar Items
  #sidebar
    = render "partials/sponsors"
    = render "partials/social"
    = render "partials/newsletter_form"