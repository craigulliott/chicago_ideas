-# 		Chicago Ideas Week
-# 		Global Header & Navigation
-# 		_header.html.haml
-# 		12/31/2011


%nav.container-fluid#global_nav
  
  %ul#global_nav.container
  
    %li#gn_logo
      %h1= link_to "Chicago Ideas Week", root_path
    
    %li#gn_upcoming.nav_parent.nav_section_end
      = link_to "2012 CIW", year_path(@current_year)
      .dropdown.full_dropdown
        %ul.dd_column.full
          %li
            2012 CIW Dates Announced: October 8 - 14, 2012
            %br
            Details coming soon
        
    %li#gn_events.nav_parent
      = link_to "Events", events_path
      .dropdown.full_dropdown
        %ul.dd_column
          %li= link_to "All CIW Talks", talks_path
          %li= link_to "CIW Megatalks", mega_talks_talks_path
          %li= link_to "Videos", videos_path
        %ul.dd_column
          %li= link_to "CIW Labs", labs_events_path
          %li= link_to "Partner Programs", partner_programs_events_path
          %li= link_to "Affiliate Events", affiliate_event_events_path
        %ul.dd_column.featured
          - @nav_featured_chapters.each do |featured|          
            %li
              .dd_img_container
                = link_to image_tag(featured.banner.url(:thumb)), video_path(featured)
              = link_to featured.title, video_path(featured)
              - featured.performances.limit(2).each do |performance|
                - if performance.speaker.present?
                  %span.small= performance.speaker.name
    
    %li#gn_videos
      = link_to "Videos", videos_path
    
    %li#gn_speakers
      = link_to "Speakers", speakers_path
    
    %li#gn_community.nav_parent
      = link_to "Community", sponsors_path
      .dropdown.double_dropdown
        %ul.dd_column
          %li= link_to "Sponsors", sponsors_path
          %li= link_to "Community Partners", partners_path
          %li= link_to "Special Programs & Awards", special_programs_path
        %ul.dd_column
          %li= link_to "News", press_clippings_path
          %li= link_to "Volunteer", new_volunteer_path

    %li#gn_about.nav_parent.nav_section_end
      = link_to "About", about_path
      .dropdown
        %ul
          %li= link_to "Mission", about_path
          %li= link_to "Team", team_members_path
          %li= link_to "Volunteer", new_volunteer_path
          %li= link_to "Contact Us", contact_path
    
      %li#nav_user.nav_parent{:style => 'display:none;'}
        = link_to "My Account", user_root_path, :id => 'users_full_name'
        .dropdown
          %ul
            %li#connect_to_facebook= link_to "Connect to Facebook", user_omniauth_authorize_path(:facebook), :class => 'facebook_connect'
            %li= link_to "My Account", user_root_path
            %li= link_to "Edit My Profile", edit_user_registration_path
            %li= link_to "Logout", destroy_user_session_path

      %li#gn_register{:style => 'display:none;'}
        = link_to "Register", new_user_registration_path
    
      %li#gn_login{:style => 'display:none;'}
        = link_to "Login", new_user_session_path
        .dropdown#dd_login_form
          = render "partials/login_form"
      
        
    
    %li#gn_search
      = render "layouts/application/search"