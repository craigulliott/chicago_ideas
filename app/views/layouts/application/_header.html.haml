%nav.container-fluid#global_nav
  
  %ul#global_nav.container
  
    %li#gn_logo
      %h1= link_to "Chicago Ideas Week", root_path, :rel => "bookmark", :title => "Chicago Ideas Week Homepage"
    
    %li#gn_about.nav_parent
      = link_to "About", about_path
      .dropdown
        %ul
          %li= link_to "Who We Are", about_path, :rel => "bookmark", :title => "About CIW"
          %li= link_to "Team", team_members_path, :rel => "bookmark", :title => "CIW Team"
          %li= link_to "Jobs", jobs_path, :rel => "bookmark", :title => "Jobs at CIW"
          %li= link_to "FAQ", faq_path, :rel => "bookmark", :title => "Frequently Asked Questions"
          %li= link_to "Contact Us", contact_path, :rel => "bookmark", :title => "Contact Us"
    
    %li#gn_membership
      = link_to "Membership", year_members_path(@current_year), :rel => "bookmark", :title => "View Members"
    
    %li#gn_videos
      = link_to "CIW Talks", videos_path, :rel => "bookmark", :title => "View all CIW Talks Videos"
    
    %li#gn_blog
      = link_to "Blog", "http://blog.chicagoideas.com", :title => "CIW Blog", :target => "_blank"
    
    %li#gn_speakers
      = link_to "Past Speakers", speakers_path, :rel => "bookmark", :title => "View Past Speakers"
    
    %li#gn_partners.nav_parent
      = link_to "Partners", sponsors_path, :rel => "bookmark", :title => "View the CIW Partners"
      .dropdown
        %ul
          %li= link_to "Sponsors", sponsors_path, :rel => "bookmark", :title => "View Sponsors"
          %li= link_to "Community Partners", partners_path, :rel => "bookmark", :title => "View Community Partners"
          %li= link_to "CIW Artist in Residence", artist_path, :rel => "bookmark", :title => "CIW Artist in Residence"
          
          
    %li#gn_special_programs.nav_parent
      = link_to "Special Programs & Awards", special_programs_path, :rel => "bookmark", :title => "Special Programs & Awards"
      .dropdown
        %ul      
          %li= link_to "ThinkChicago", thinkchicago_path, :rel => "bookmark", :title => "ThinkChicago"
          %li= link_to "Bluhm/Helfand Social Innovation Fellowship", blum_helfand_path, :rel => "bookmark", :title => "Bluhm/Helfand Social Innovation Fellowship"
    
    
    
    %li#gn_newsroom
      = link_to link_to "Newsroom", press_clippings_path, :rel => "bookmark", :title => "View News Releases"
      

    
    
    
    
    
    %li#nav_user.nav_parent{:style => 'display:none;'}
      = link_to "My Account", user_root_path, :id => 'users_full_name'
      .dropdown
        %ul
          %li#connect_to_facebook= link_to "Connect to Facebook", user_omniauth_authorize_path(:facebook), :class => 'facebook_connect'
          %li= link_to "My Account", user_root_path
          %li= link_to "Edit My Profile", edit_user_registration_path
          %li= link_to "Logout", destroy_user_session_path

      %li#gn_login{:style => 'display:none;'}
        = link_to "Login", new_user_session_path, :title => "Login"
        .dropdown#dd_login_form
          = render "partials/login_form"
      
        
    
    %li#gn_search
      = render "layouts/application/search"
  
  #social_media.container
    %div
      = link_to image_tag("/assets/application/btn_twitter.png"), "https://twitter.com/chicagoideas", :target => "_blank"
      = link_to image_tag("/assets/application/btn_facebook.png"), "http://www.facebook.com/ChicagoIdeasWeek", :target => "_blank"
    
