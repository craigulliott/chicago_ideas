-#     Chicago Ideas Week
-#     years/speakers.html.haml
-#     04/02/2012


-# Breadcrumbs and Explore button
%section#header_toolbar.container-fluid
  .container
    #breadcrumbs
      %ul
        %li= link_to "Home", "/"
        %li= link_to "2012 CIW", year_path(@current_year)


-# Begin Main Speaker content
%section.container#main_content
  
  #page_header
    #page_title.left
      %h1 2012 CIW Speakers
    = render "partials/share"
      
  
  -# Left column: Speakers List
  .box.double.left
    .column_row#speakers
      .column.column_double
        %span.column_header 
          Speakers
          %a{:class => "model_search_btn expandable_search", :href => "#"} search speakers

        = render "partials/search", :model => "speakers"

        %ul.preview_list.speaker_list.double_rows
          = render "partials/speakers_loop", :speakers => speakers
        = paginate speakers
    
                

  -# Include Sidebar Items
  #sidebar
    .box.right.yellow_box
      .column_row
        = link_to recommend_speaker_path, :class => "callout_link" do
          %span.medium_callout Recommend a Speaker for CIW 2012!
    = render "partials/sponsors"
    = render "partials/newsletter_form"
    = render "partials/social"


